<h1><%= @recipe.name %></h1>
<h2><%= @recipe.description %></h2>
<p><%= @recipe.instructions %></p>
<hr />
<p>Ingredients:</p>
<% @recipe.ingredients.each do |ingredient| %>
	<li>
		<% @inclusion = Inclusion.where(recipe_id: @recipe.id, 
																		ingredient_id: ingredient.id).first %>
		<%= ingredient.name %> - <%= @inclusion.amount %>
	</li>
<% end %>